---
interface Props {
  type: "internship" | "education";
  logo: string;
  title: string;
  role: string;
  time: string;
  link?: string;
}

const { type, logo, title, role, time, link } = Astro.props;

const bgColor = type === "internship" 
  ? "bg-blue-50/50 dark:bg-blue-900/10 hover:bg-blue-100/50 dark:hover:bg-blue-900/20" 
  : "bg-orange-50/50 dark:bg-orange-900/10 hover:bg-orange-100/50 dark:hover:bg-orange-900/20";

const borderColor = type === "internship"
  ? "border-blue-100 dark:border-blue-800"
  : "border-orange-100 dark:border-orange-800";

const Tag = link ? "a" : "div";
const props = link ? { href: link, target: "_blank", rel: "noopener noreferrer" } : {};
---

<Tag {...props} class={`flex items-center p-4 rounded-2xl border ${bgColor} ${borderColor} transition-all duration-300 hover:scale-[1.02] ${link ? 'cursor-pointer' : ''} mb-4 group`}>
  <div class="flex-shrink-0 mr-4 bg-white dark:bg-gray-800 p-2 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700">
    <img src={logo} alt={title} class="w-10 h-10 object-contain" />
  </div>
  <div class="flex-grow min-w-0">
    <div class="flex justify-between items-start md:items-center flex-col md:flex-row gap-1 md:gap-0">
      <h3 class="font-bold text-lg text-gray-900 dark:text-gray-100 truncate w-full md:w-auto">{title}</h3>
      <span class="text-sm font-medium text-gray-500 dark:text-gray-400 whitespace-nowrap bg-white/50 dark:bg-black/20 px-2 py-0.5 rounded-md">{time}</span>
    </div>
    <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">{role}</p>
  </div>
</Tag>